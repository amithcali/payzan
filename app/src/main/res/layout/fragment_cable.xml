<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_new"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="@dimen/image_height"
                    android:layout_height="@dimen/image_height"
                    app:srcCompat="@drawable/ic_television"
                    android:layout_toLeftOf="@+id/header"
                    android:layout_marginRight="@dimen/eightDp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cable TV"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_header_size"
                    android:layout_centerInParent="true"
                    android:id="@+id/header"
                    />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/operator"
                android:hint="Operator"
                style="@style/EditTextStyle"
                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/customerId"
                android:hint="Account Number"
                style="@style/EditTextStyle"
              />


            <FrameLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/amount"
                    android:hint="Amount"
                    style="@style/EditTextStyle"
                    android:inputType="numberDecimal"
                    />
                <TextView
                    android:id="@+id/browsePlans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/tenDp"
                    android:text="browse Plans"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/tenSP"
                    android:fontFamily="sans-serif-condensed"
                    />
            </FrameLayout>


            <Button
                style="@style/ButtonStyle"
                android:id="@+id/submit"
                android:text="Proceed to Recharge"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>