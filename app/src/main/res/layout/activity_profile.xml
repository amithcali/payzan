<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitepure"
                app:title="@string/profile"
                app:titleTextColor="@color/black"
               >
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="2dp">

                    <RelativeLayout
                        android:id="@+id/imagelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/profileimage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user" />

                        <TextView
                            android:id="@+id/editimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/profileimage"
                            android:layout_centerInParent="true"
                            android:padding="6dp"
                            android:text="Edit"
                            android:textColor="@color/accent" />

                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imagelayout">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name">

                            <EditText
                                android:id="@+id/firstNameEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:backgroundTint="@color/very_light_gray" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:id="@+id/firstclearBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_delete" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/first"
                        android:layout_toRightOf="@+id/imagelayout">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imagelayout"
                            android:hint="Last Name">

                            <EditText
                                android:id="@+id/lastNameEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:backgroundTint="@color/very_light_gray" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:id="@+id/lastClearBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_delete" />
                    </FrameLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_gray"
                    android:padding="8dp"
                    android:text="PERSONAL INFORMATION"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/usericon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_user" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/displaynamelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/usericon"
                        android:hint="Display Name">

                        <EditText
                            android:id="@+id/displayNameEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@color/very_light_gray" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/emailicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/usericon"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_email" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/displaynamelayout"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/emailicon"
                        android:hint="Email">

                        <EditText
                            android:id="@+id/emailEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            app:backgroundTint="@color/very_light_gray" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/usericon"
                        android:layout_margin="4dp"
                        app:srcCompat="@drawable/ic_mobile" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/emaillayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/displaynamelayout"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/emailicon"
                        android:hint="Mobile No.">

                        <EditText
                            android:id="@+id/mobileEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            app:backgroundTint="@color/very_light_gray" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/usericon"
                        android:layout_margin="4dp"
                        android:src="@drawable/ic_birthday" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/displaynamelayout"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/emailicon"
                        android:hint="Date of Birth">

                        <EditText
                            android:id="@+id/DOBEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@color/very_light_gray"
                            android:editable="false"
                            android:singleLine="true"
                            android:clickable="true"
                           />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gendericon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/ic_gender" />

                        <TextView
                            android:id="@+id/gendrText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/gendericon"
                            android:text="@string/gender"
                            android:textColor="@color/list_bg_pressed" />


                        <RadioGroup
                            android:id="@+id/gendergroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gendrText"
                            android:layout_toRightOf="@+id/gendericon"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/maleRB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textColor="@color/list_bg_pressed" />

                            <RadioButton
                                android:id="@+id/femaleRB"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/female"
                                android:textColor="@color/list_bg_pressed" />
                        </RadioGroup>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/gendergroup"
                            android:layout_toRightOf="@+id/gendericon"
                            android:background="@color/very_light_gray" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>