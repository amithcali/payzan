<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/lyt_margin">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameTIl">
            <calibrage.payzan.controls.CommonEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:id="@+id/firstNameEdt"/>

        </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middleNameTIL">
            <calibrage.payzan.controls.CommonEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:inputType="textPersonName"
                android:hint="Middle Name"
                android:id="@+id/middleNameEdt"/>

        </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameTIL">
            <calibrage.payzan.controls.CommonEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:id="@+id/lastNameEdt"/>

        </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileTIL">
            <calibrage.payzan.controls.CommonEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:hint="Mobile No."
                android:inputType="phone"
                android:id="@+id/mobileEdt"/>

        </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailTIL">
            <calibrage.payzan.controls.CommonEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextStyle"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/emailEdt"/>

        </calibrage.payzan.utils.NCBTextInputLayout>

        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stateTIl"
            android:visibility="visible"
            >
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="Select Province"
            android:id="@+id/stateSpn"/>

        </calibrage.payzan.utils.NCBTextInputLayout>

        <calibrage.payzan.utils.NCBTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/districtTIl">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="Select District"
            android:id="@+id/districtSpn"/>

        </calibrage.payzan.utils.NCBTextInputLayout>

        <calibrage.payzan.utils.NCBTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/mandalTIl">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="Select Mandal"
            android:id="@+id/mandalSpn"/>

    </calibrage.payzan.utils.NCBTextInputLayout>

        <calibrage.payzan.utils.NCBTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/villageTIl"
            >
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="Select Village"
            android:id="@+id/villageSpn"/>

    </calibrage.payzan.utils.NCBTextInputLayout>


        <calibrage.payzan.utils.NCBTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/address1TIL" >
        <calibrage.payzan.controls.CommonEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="Address1"
            android:inputType="textMultiLine"
            android:id="@+id/address1Edt"/>

    </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/address2TIL">
        <calibrage.payzan.controls.CommonEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="Address2"
            android:inputType="textMultiLine"
            android:id="@+id/address2Edt"/>

    </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/landmarkTIL">
        <calibrage.payzan.controls.CommonEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextStyle"
            android:hint="LandMark"
            android:inputType="text"
            android:id="@+id/landmarkEdt"/>
    </calibrage.payzan.utils.NCBTextInputLayout>
        <calibrage.payzan.utils.NCBTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:id="@+id/commentTIL">
        <calibrage.payzan.controls.CommonEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            style="@style/EditTextStyle"
            android:hint="Enter your comments"
            android:inputType="text"
            android:id="@+id/commentsEdt"/>
    </calibrage.payzan.utils.NCBTextInputLayout>


        <calibrage.payzan.controls.CommonButton
            style="@style/ButtonStyle"
            android:id="@+id/submit"
            android:text="Submit"
            android:layout_marginTop="@dimen/btn_margin_top"
            android:layout_marginBottom="@dimen/btn_margin_bottom"
            android:textColor="@color/white"/>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>