<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dth_electricity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Electricity Bill"
                android:gravity="bottom"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="serif"
                />
        </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/stateEdt"
                android:hint="State"
                style="@style/EditTextStyle"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/ElectrictyEdt"
                android:hint="Electricity Board"
                style="@style/EditTextStyle"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/ServiceNEdt"
                android:hint="Service No/Unique Service No"
                style="@style/EditTextStyle"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/ConsumerNoEdt"
                android:hint="Consumer No"
                style="@style/EditTextStyle"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/submit"
                android:background="@drawable/border_fillcompletely"
                android:text="Proceed to Pay Bill"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"/>

        </LinearLayout>




    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>